{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/assets/.*",
      "headers": { "Cache-Control": "public, max-age=31536000" },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { "Cache-Control": "no-cache" }
    }
  ]
}